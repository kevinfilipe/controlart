<ui:composition xmlns="http://www.w3.org/1999/xhtml"
	xmlns:f="http://java.sun.com/jsf/core"
	xmlns:h="http://java.sun.com/jsf/html"
	xmlns:p="http://primefaces.org/ui"
	xmlns:ui="http://java.sun.com/jsf/facelets">
	<p:dialog id="modalClassificacao" appendToBody="false" modal="true"
		resizable="false" styleClass="dialog" widgetVar="modalClassificacaoWV">
		<f:facet name="header">
			<h:outputLabel value="#{msgs.labelNovaClassificacao}"
				rendered="#{(classificacaoBean.novoRegistro) and (classificacaoBean.usuarioLogado.tipoUsuario ne 2)}" />
			<h:outputLabel value="#{msgs.labelEditarClassificacao}"
				rendered="#{(not classificacaoBean.novoRegistro) and (classificacaoBean.usuarioLogado.tipoUsuario ne 2)}" />
			<h:outputLabel value="#{msgs.labelVisualizarClassificacao}"
				rendered="#{classificacaoBean.usuarioLogado.tipoUsuario eq 2}" />
		</f:facet>

		<h:form id="formModalClassificacao">
			<p:growl globalOnly="true" life="10000" />

			<p:panelGrid columns="3">
				<h:outputLabel value="#{msgs.labelNome}">
					<h:outputLabel value="*" styleClass="campo-obrigatorio" />
				</h:outputLabel>
				<p:inputText
					disabled="#{classificacaoBean.usuarioLogado.tipoUsuario eq 2}"
					id="nome" required="true"
					value="#{classificacaoBean.classificacao.nome}">
					<f:validateLength minimum="2" maximum="100" />
				</p:inputText>
				<p:message for="nome" />

				<h:outputLabel value="#{msgs.labelDescricao}" />
				<p:inputText
					disabled="#{classificacaoBean.usuarioLogado.tipoUsuario eq 2}"
					value="#{classificacaoBean.classificacao.descricao}" />
				<h:outputLabel value="" />

				<h:outputLabel
					rendered="#{(classificacaoBean.usuarioLogado.tipoUsuario eq 2) or ((classificacaoBean.novoRegistro) or ((not classificacaoBean.novoRegistro) and (classificacaoBean.classificacao.ativo eq 0)))}"
					value="#{msgs.labelStatus}" />
				<p:selectOneRadio
					disabled="#{classificacaoBean.usuarioLogado.tipoUsuario eq 2}"
					rendered="#{(classificacaoBean.usuarioLogado.tipoUsuario eq 2) or ((classificacaoBean.novoRegistro) or ((not classificacaoBean.novoRegistro) and (classificacaoBean.classificacao.ativo eq 0)))}"
					value="#{classificacaoBean.classificacao.ativo}">
					<f:selectItem itemLabel="#{msgs.labelAtivo}" itemValue="1" />
					<f:selectItem itemLabel="#{msgs.labelInativo}" itemValue="0" />
				</p:selectOneRadio>
				<h:outputLabel
					rendered="#{(classificacaoBean.usuarioLogado.tipoUsuario eq 2) or ((classificacaoBean.novoRegistro) or ((not classificacaoBean.novoRegistro) and (classificacaoBean.classificacao.ativo eq 0)))}"
					value="" />
			</p:panelGrid>

			<p:commandButton action="#{classificacaoBean.saveAction}"
				disabled="#{classificacaoBean.usuarioLogado.tipoUsuario eq 2}"
				styleClass="botao" title="#{msgs.labelSalvar}"
				update=":formClassificacao:dataTableClassificacao, :formModalClassificacao"
				value="#{msgs.labelSalvar}" />
			<p:commandButton
				onclick="modalClassificacaoWV.hide();" process="@this"
				styleClass="botao-voltar" title="#{msgs.labelVoltar}"
				value="#{msgs.labelVoltar}" />
		</h:form>
	</p:dialog>
</ui:composition>