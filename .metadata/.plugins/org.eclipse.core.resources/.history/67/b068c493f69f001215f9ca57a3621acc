				<p:dataTable id="dataTablePessoa"
					emptyMessage="#{msgs.msNenhumRegistro}" paginator="true"
					paginatorAlwaysVisible="false" rows="6"
					styleClass="data-table-pessoa" value="#{pessoaBean.listPessoa}"
