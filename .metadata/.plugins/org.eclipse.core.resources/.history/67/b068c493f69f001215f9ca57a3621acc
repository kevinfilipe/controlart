					</p:column>

					<p:column headerText="#{msgs.labelTelefone}">
						<h:outputLabel value="#{listaPessoa.nrFone}" />
					</p:column>

					<p:column headerText="#{msgs.labelSituacao}">
						<h:outputLabel converter="statusConverter"
							value="#{listaPessoa.situacao}" />
					</p:column>

					<p:column>
						<p:commandLink action="#{pessoaBean.definirEditar}"
							oncomplete="modalPessoaWV.show();" title="#{msgs.labelEditar}"
							update=":modalPessoa">
							<p:graphicImage url="#{resource['image:update_ico.png']}" />
							<p:resetInput target=":formModalPessoa" />
						</p:commandLink>

						<p:spacer height="20" />

						<p:commandLink action="#{pessoaBean.inactivateAction}"
							disabled="#{(listaPessoa.situacao eq 0) or (pessoaBean.usuarioLogado.idTipoUsuario eq 2)}"
							onclick="if (!confirm('#{msgs.msConfirmRemocao}')) return false;"
							title="#{msgs.labelInativar}" update=":formPessoa">
							<p:graphicImage url=" #{resource['image:delete_ico.png']}" />
						</p:commandLink>
					</p:column>
				</p:dataTable>

				<h:panelGroup layout="block" styleClass="botao">
					<p:commandButton action="#{pessoaBean.definirNovo}"
						disabled="#{pessoaBean.usuarioLogado.idTipoUsuario eq 2}"
						oncomplete="modalPessoaWV.show();" title="#{msgs.labelNovo}"
						update=":modalPessoa" value="#{msgs.labelNovo}">
						<p:resetInput target=":formModalPessoa" />
					</p:commandButton>
