<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://www.oracle.com/webfolder/technetwork/jsc/xml/ns/javaee/web-facesconfig_2_1.xsd"
	version="2.1">
	<lifecycle>
		<phase-listener>com.controlart.listener.ControlArtListener</phase-listener>
	</lifecycle>

	<application>
		<locale-config>
			<default-locale>pt_BR</default-locale>
			<supported-locale>en_US</supported-locale>
			<supported-locale>pt_BR</supported-locale>
		</locale-config>

		<message-bundle>com.controlart.message.Messages</message-bundle>

		<resource-bundle>
			<base-name>com.controlart.message.MessagesPages</base-name>
			<var>msgs</var>
		</resource-bundle>
	</application>
</faces-config>
